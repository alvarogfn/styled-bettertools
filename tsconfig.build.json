{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "coverage",
    "src/**/*.test.*"
  ]
}
